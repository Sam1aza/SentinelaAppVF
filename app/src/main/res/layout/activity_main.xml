<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="38dp"
                android:src="@drawable/ic_icon_sentinela" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="SENTINELA"
                android:textColor="@color/fundo_branco"
                android:textSize="32sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtlay_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="32dp"
                android:textColorHint="@color/fundo_branco">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/fundo_branco"
                    android:textColorHint="@color/fundo_branco" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtlay_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="32dp"
                android:textColorHint="@color/fundo_branco"
                app:passwordToggleEnabled="true">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_passwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:hint="Senha"
                    android:inputType="textPassword"
                    android:outlineAmbientShadowColor="@color/fundo_branco"
                    android:outlineSpotShadowColor="@color/fundo_branco"
                    android:textColor="@color/fundo_branco"
                    android:textColorHighlight="@color/fundo_branco"
                    android:textColorHint="@color/fundo_branco" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/botao_logar"
                    android:elevation="4dp"
                    android:text="LOGAR"
                    android:textColor="@color/fundo_branco">

                </Button>

                <Button
                    android:id="@+id/btn_realcadastro"
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/botao_cadastrar"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="CADASTRAR">

                </Button>


            </LinearLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>


    </ScrollView>


</LinearLayout>